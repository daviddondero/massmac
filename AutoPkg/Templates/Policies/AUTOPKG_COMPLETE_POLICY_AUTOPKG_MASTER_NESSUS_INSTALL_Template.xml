<?xml version="1.0" encoding="UTF-8"?>
<!-- TENABLE NESSUS AGENT INSTALL TEMPLATE -->
<policy>
  <general>
    <name>%POLICY_NAME_AUTOPKG_MASTER_PROVISIONING_INSTALL%</name>
    <enabled>true</enabled>
    <frequency>Ongoing</frequency>
    <category>
      <name>AUTOPKG MASTER_PROVISIONING_INSTALL</name>
    </category>
    <trigger_other>install_%NAME%_AUTOPKG_MASTER</trigger_other>
  </general>
  <scope>
    <all_computers>true</all_computers>
  </scope>
  <package_configuration>
    <packages>
    <size>1</size>
      <package>
        <name>%pkg_name%</name>
        <action>Install</action>
      </package>
    </packages>
  </package_configuration>
  <scripts>
  	<size>1</size>
    <script>
      <name>Tenable Nessus Agent Configuration Script - AutoPkg</name>
      <priority>After</priority>
    </script>
  </scripts>
  <maintenance>
    <recon>false</recon>
  </maintenance>
</policy>
