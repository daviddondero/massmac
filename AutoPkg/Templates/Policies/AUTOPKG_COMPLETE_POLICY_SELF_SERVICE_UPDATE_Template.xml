<?xml version="1.0" encoding="UTF-8"?>
<!-- SELF SERVICE UPDATE TEMPLATE -->
<policy>
  <general>
    <name>%POLICY_NAME_SELF_SERVICE_UPDATE%</name>
    <enabled>true</enabled>
    <frequency>Ongoing</frequency>
    <category>
      <name>Update My Mac</name>
    </category>
  </general>
  <scope>
    <computer_groups>
      <computer_group>
        <name>%NAME%-autopkg-update-status</name>
      </computer_group>
    </computer_groups>
  </scope>
  <scripts>
      <size>1</size>
      <script>
         <name>autopkg_force_quit_application</name>
         <priority>Before</priority>
         <parameter4>%NAME%</parameter4>
      </script>
   </scripts>
  <self_service>
    <use_for_self_service>true</use_for_self_service>
    <install_button_text>Update to %version%</install_button_text>
    <reinstall_button_text>Reinstall %version%</reinstall_button_text>
    <self_service_display_name>Update %NAME%</self_service_display_name>
    <self_service_description>Update to latest version of %NAME% (%version%).&#10;&#10;**Make sure you quit %NAME% before updating!**</self_service_description>
    <force_users_to_view_description>true</force_users_to_view_description>
    <self_service_categories>
      <category>
        <name>Update My Mac</name>
        <display_in>true</display_in>
        <feature_in>true</feature_in>
      </category>
    </self_service_categories>
  </self_service>
  <maintenance>
    <recon>true</recon>
  </maintenance>
  <files_processes>
    <run_command>jamf policy -event "install_%NAME%_AUTOPKG_MASTER"</run_command>
  </files_processes>
</policy>